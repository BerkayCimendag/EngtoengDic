@using Newtonsoft.Json;
@using EngtoengDic.data
@model Word




<div class="card-body d-flex justify-content-center align-items-center " style="height:90vh;">
    <form method="post">
        <div class="form-group">
            <input style="width:500px; height:50px" asp-for="Name" class="form-control" placeholder="Search a word" />
        </div>
        <hr />
        <div class="form-group">
            <label>Meaning: </label>
            <label style="font-weight:700">@(ViewBag.Meaning != null ? ViewBag.Meaning : "-")</label>
        </div>
        <hr />
        <div class="form-group">
            <label>Example: </label>
            <label style="font-weight:700">@(ViewBag.Example != null ? ViewBag.Example : "-")</label>
        </div>
        <hr />
        <div class="form-group">
            <label>Synonym: </label>
            <label style="font-weight:700">@(ViewBag.Synonym != null ? ViewBag.Synonym : "-")</label>
        </div>
        <hr />
        <button type="submit" class="btn btn-warning ">Search</button>
    </form>
</div>



